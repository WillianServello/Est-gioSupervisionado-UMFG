@using cafeservellocontroler.Models.ViewModels
@model EditarDadosViewModel
@{
    ViewData["Title"] = "Alterar senha usuário";
}


<div class="mt-5 mb-0">

</div>
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MensagemSucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["MensagemErro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-center">
    <div class="background-div mt-5 p-4 container">

        <div class="mt-4 mb-4 p-3 shadow-sm d-flex justify-content-center">
            <i class="fa-solid fa-fingerprint fa-xl d-flex align-items-center"></i>
            <p class="tamanho-font-titulo borda-titulo">
                Perfil
            </p>
        </div>

        <hr class="m-0 mb-2" />

        @await Component.InvokeAsync("EditarSenhaMenu")

        <hr class="mb-0" />

        <div class="row justify-content-center">
            <!-- CENTRALIZA OS BOTOES -->

            <div class="col-md-2 text-center">
                <a class="btn btn-outline-dark botao-senha mt-3 d-inline-flex align-items-center"
                   data-bs-toggle="modal"
                   data-bs-target="#modalEditarDadosGet"
                   href="/AlterarSenha/EditarDadosGet">

                    <span class="icone-wrapper">
                        <i class="fa-solid fa-address-card"></i>
                    </span>
                    Alterar Dados
                </a>
            </div>

            <div class="col-md-2 text-center">
                <a class="btn btn-outline-dark botao-senha mt-3 d-inline-flex align-items-center"
                   data-bs-toggle="modal"
                   data-bs-target="#modalEditarSenha">

                    <span class="icone-wrapper">
                        <i class="fa-solid fa-lock icon-fechado"></i>
                        <i class="fa-solid fa-lock-open icon-aberto"></i>
                    </span>
                    Alterar Senha
                </a>
            </div>

        </div>

    </div>
</div>
    </div>
    




@*Esse daqui e o modal de APAGAR O PRODUTO *@
<div class="modal fade" id="modalEditarSenha" tabindex="-1" aria-labelledby="modalEditarSenha" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Senha</h5>
                <button type="button" class="btn-close btn-close-color" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("Editar")
            </div>
        </div>
    </div>
    </div>
</div>


<div class="modal fade" id="modalEditarDadosGet" tabindex="-1" aria-labelledby="modalEditarDadosGet" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Editar Dados</h5>
                <button type="button" class="btn-close btn-close-color" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>

            <div class="modal-body">
                <div id="conteudoEditarDados"><!-- Conteúdo carregado via fetch aqui --></div>
            </div>

        </div>
    </div>
</div>

<script>
    document.querySelector('[data-bs-target="#modalEditarDadosGet"]').addEventListener('click', function (e) {
        e.preventDefault();

        fetch(this.href)
            .then(res => res.text())
            .then(html => {
                document.getElementById("conteudoEditarDados").innerHTML = html;
            });
    });
</script>


