@using cafeservellocontroler.Models.Pessoa.ViewModels
@model FornecedorViewModel
@{
    ViewData["Title"] = "Confirmação de Apagar Fornecedor";
}

<div class="text-center">
    <h3>Realmente deseja apagar o Fornecedor (@Model.Nome)</h3>

    <a class="btn btn-primary btn-block" role="button" asp-controller="Fornecedor" asp-action="Index">Cancelar Exclusão</a>
    <a class="btn btn-danger btn-block" role="button" asp-controller="Fornecedor" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar Exclusão</a>
</div>
