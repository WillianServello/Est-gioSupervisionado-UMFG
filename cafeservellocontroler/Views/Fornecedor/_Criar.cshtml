
@using cafeservellocontroler.Models.ViewModels
@model FornecedorViewModel

<form id="formFornecedor" asp-controller="Fornecedor" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Informe o nome do fornecedor">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="cnpj">Cnpj</label>
        <input type="text" asp-for="Cnpj" class="form-control" placeholder="Informe o Cnpj">
        <span asp-validation-for="Cnpj" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Informe o telefone">
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Informe o email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="materiaprima">Materia Prima</label>
        <input type="text" asp-for="MateriaPrima" class="form-control" placeholder="Informe a Matéria Prima">
        <span asp-validation-for="MateriaPrima" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3">Adicionar</button>
    <button type="button" class="btn btn-danger w-100 mt-3" data-bs-dismiss="modal">Cancelar</button>
</form>