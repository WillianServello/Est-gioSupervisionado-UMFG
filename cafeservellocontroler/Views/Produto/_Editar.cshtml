
@using cafeservellocontroler.Models.ViewModels
@model ProdutoViewModel
@{
    ViewData["Title"] = "Editar Produtos";
}


<form id="formEditarProduto" asp-controller="Produto" asp-action="Alterar" method="post">
    <div class="div-Criar responsivo">
        <input type="hidden" asp-for="Id"/>
         <div class="form-group">
            <label for="nome">Nome*</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Informe o nome do produto">
            <span asp-validation-for="Nome" class="text-danger"></span>
         </div>

         <div class="form-group">
            <label for="tipo">Tipo do café*</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Informe o tipo">
            <span asp-validation-for="Descricao" class="text-danger"></span>
         </div>

        <div class="row">
             <div class="form-group col-md-6">
                <label for="precoCompra">Preço Compra*</label>
                <input asp-for="PrecoCompra" id="precoCompraEditar" name="PrecoCompra" type="text" class="form-control mask-money" autocomplete="off" inputmode="decimal" placeholder="Informe o valor" />
                <span asp-validation-for="PrecoCompra" class="text-danger"></span>
             </div>

            <div class="form-group col-md-6">
                <label for="preco">Preço*</label>
                <input asp-for="Preco" id="precoEditar" name="Preco" type="text" class="form-control mask-money" autocomplete="off" inputmode="decimal" placeholder="Informe o valor" />
                <span asp-validation-for="Preco" class="text-danger"></span>
             </div>
        </div>

        <div class="row " >
            <div class="form-group col-md-6">
                <label for="estoque">Estoque*</label>
                <input type="text" asp-for="Estoque" class="form-control" placeholder="Informe a quantidade em estoque">
                <span asp-validation-for="Estoque" class="text-danger"></span>
             </div>
        </div>         
   </div>

    <div class=" d-flex justify-content-end   ">

        <button type="submit" class="btn btn-primary mt-3 button-submit-close " style="margin-right: 15px">
            <i class="fa-regular fa-floppy-disk fa-lg"></i>
            Atualizar


        </button>

        <a role="button" class="btn btn-outline-danger mt-3 button-submit-close" data-bs-dismiss="modal">
            <i class="fa-solid fa-eject fa-lg"></i>
            Cancelar
        </a>
    </div>


</form>


    

