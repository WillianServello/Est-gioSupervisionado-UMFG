@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Lucro por produto";
}

<div style="display:flex; justify-content:center;">
    <div class="container-fluid">

        <h1 class="display-4">Lucro por produto</h1>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <br /><br />

        <table class="table" id="table">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Preço Compra</th>
                    <th>Preço Venda</th>
                    <th>Lucro Unidade</th>
                    <th>Quantidade Vendida</th>
                    <th>Lucro Total</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Nome</td>
                            <td>R$ @p.PrecoCompra.ToString("N2")</td>
                            <td>R$ @p.PrecoVenda.ToString("N2")</td>
                            <td>R$ @p.LucroUnidade.ToString("N2")</td>
                            <td>@p.QuantidadeVendida</td>
                            <td>R$ @p.LucroTotal.ToString("N2")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6">Nenhum dado encontrado.</td></tr>
                }
            </tbody>
        </table>

    </div>
</div>
