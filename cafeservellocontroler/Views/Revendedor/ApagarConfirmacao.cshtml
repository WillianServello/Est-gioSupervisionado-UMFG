@using cafeservellocontroler.Models.Pessoa
@model ModelRevendedor
@{
    ViewData["Title"] = "Confirmação de Apagar Revendedor";
}

<div class="text-center">
    <h3>Realmente deseja apagar o Revendedor (@Model.Nome)</h3>

    <a class="btn btn-primary btn-block" role="button" asp-controller="Revendedor" asp-action="Index">Cancelar Exclusão</a>
    <a class="btn btn-danger btn-block" role="button" asp-controller="Revendedor" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar Exclusão</a>
</div>
