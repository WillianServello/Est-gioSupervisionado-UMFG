@using cafeservellocontroler.Models.ViewModels
@model UsuarioViewModel
@{
    ViewData["Title"] = "Usuário";
}

<form id="formProduto" asp-controller="Usuario" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Informe o nome de login">
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Informe a senha">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Informe o email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="nivelAcesso">Nível de Acesso</label>
        <select asp-for="Perfil" class="form-control">
            <option value="">Selecione</option>
            <option value="1">Administrador</option>
            <option value="2">Funcionário</option>
        </select>
        <span asp-validation-for="Perfil" class="text-danger"></span>

    </div>


    <button type="submit" class="btn btn-primary w-100 mt-3">Adicionar</button>
    <button type="button" class="btn btn-danger w-100 mt-3" data-bs-dismiss="modal">Cancelar</button>
</form>