@using cafeservellocontroler.Models.ViewModels
@model VendaViewModel
@{
    ViewData["Title"] = "Confirmação de Apagar Venda";
}

<div class="text-center">
    <h3>Realmente deseja apagar a Venda</h3>

    <a class="btn btn-primary btn-block" role="button" asp-controller="Venda" asp-action="Index">Cancelar Exclusão</a>
    <a class="btn btn-danger btn-block" role="button" asp-controller="Venda" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar Exclusão</a>
</div>

