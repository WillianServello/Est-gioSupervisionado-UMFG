@using cafeservellocontroler.Models.Venda
@model ModelVenda

<div class="container">

    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Informações da Venda</h5>

            <p><strong>ID da Venda:</strong> @Model.Id</p>
            <p><strong>Data:</strong> @Model.DataVenda.ToString("dd/MM/yyyy")</p>
            <p><strong>Revendedor:</strong> @Model.Revendedor.Nome</p>
            <p>
                <strong>Total:</strong>
                <span class="text-success fw-bold">R$ @Model.TotalVenda.ToString("N2")</span>
            </p>
        </div>
    </div>

    <h6 class="mt-3">Itens da Venda</h6>

    <div class="list-group">
        @foreach (var item in Model.ItensVendas)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@item.Produto.Nome</strong><br />
                    <small class="text-muted">@item.Quantidade unidade(s)</small>
                </div>

                <div class="text-end">
                    <div>R$ @item.Valor.ToString("N2")</div>
                    <small class="text-muted">
                        Total: R$ @((item.Quantidade * item.Valor).ToString("N2"))
                    </small>
                </div>
            </div>
        }
    </div>

</div>
